rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function currentUid() {
      return request.auth != null && request.auth.uid != null
        ? request.auth.uid
        : '';
    }

    function isSpaceOwner(spaceData) {
      return request.auth != null &&
        spaceData.ownerId is string &&
        spaceData.ownerId == currentUid();
    }

    function canAccessSpace(spaceId) {
      return request.auth != null &&
        spaceId is string &&
        get(/databases/$(database)/documents/spaces/$(spaceId)).exists &&
        isSpaceOwner(get(/databases/$(database)/documents/spaces/$(spaceId)).data);
    }

    function ownerIdUnchanged(resourceData) {
      return !(request.resource.data.ownerId is string) ||
        request.resource.data.ownerId == resourceData.ownerId;
    }

    match /spaces/{spaceId} {
      allow read: if request.auth != null && isSpaceOwner(resource.data);
      allow create: if request.auth != null && request.resource.data.ownerId == currentUid();
      allow update: if request.auth != null &&
        resource.data != null &&
        ownerIdUnchanged(resource.data) &&
        isSpaceOwner(resource.data);
      allow delete: if request.auth != null && isSpaceOwner(resource.data);
    }

    match /spaces/{spaceId}/habits/{habitId} {
      allow read, write: if canAccessSpace(spaceId);
    }

    match /activities/{activityId} {
      allow create: if request.auth != null &&
        request.resource.data.spaceId is string &&
        canAccessSpace(request.resource.data.spaceId);
      allow read, update, delete: if request.auth != null &&
        resource.data.spaceId is string &&
        canAccessSpace(resource.data.spaceId);
    }

    function isInviteOwner(resourceData) {
      return request.auth != null &&
        resourceData.ownerId is string &&
        resourceData.ownerId == currentUid();
    }

    match /invites/{token} {
      allow get: if true;
      allow list: if isInviteOwner(resource.data);
      allow create: if request.auth != null &&
        request.resource.data.ownerId == currentUid();
      allow update: if request.auth != null &&
        resource.data != null &&
        isInviteOwner(resource.data) &&
        (
          !(request.resource.data.ownerId is string) ||
          request.resource.data.ownerId == resource.data.ownerId
        );
      allow delete: if request.auth != null;
    }

    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    match /libraryHabits/{habitId} {
      allow read: if true;
    }
  }
}
